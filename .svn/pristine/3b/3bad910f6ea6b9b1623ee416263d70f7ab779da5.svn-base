div.pdTab>div {
    width: 175px;
    height: 48px;
    line-height: 48px;
    text-align: center;
    cursor: pointer;
    position: relative;
}

div.pdTab>div>a {
	display: inline-block;
    color: #888;
    cursor: pointer;
}

div.pdTab>div>a.on {
    display: inline-block;
    color: #333;
    font-weight: bold;
    margin: 0 -5px;
}

div.pdTab>div>a.on::before {
    content: "";
    display: block;
    width: 0;
    height: 3px;
    background: #ec7d2c;
    position: absolute;
    top: 0;
    left: 0;
    transition: all 0.3;
}

div.pdTab>div>a.on::before {
    width: 90px;
    margin: 0 40px;
}

div.pdTab>div>a.on::after {
    content: "↓";
    display: inline;
    color: #333;
    margin-left: 3px;
}

div.pdTab>div::after {
    content: "";
    display: block;
    width: 1px;
    height: 15px;
    background: #ddd;
    position: absolute;
    right: 0;
    top: 22px;
}

div.pdTab>div:nth-child(4)::after {
    display: none;
}

div#section03>div.pdDetail>div:not(.on) {
