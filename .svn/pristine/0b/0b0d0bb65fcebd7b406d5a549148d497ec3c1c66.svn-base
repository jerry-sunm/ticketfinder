<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<div id="login">
	<div id="section">
	    <div class="loginHeader">
	        <div id="headerArea">
	            <img src="images/common/login_logo.jpg">
	        </div>
	    </div>
	    <div class="cont">
	    <form name="f" method="post">
	        <div class="loginForm">
	            <div>
	                <div class="login_input">
	                    <div class="login_insert">
	                        <input type="text" name="id" id="id" class="id" placeholder="아이디" value="${loginUserInfo.userId }">
	                        <input type="password" name="passwd" id="passwd" class="passwd" placeholder="비밀번호">
	                        <div class="save">
	                            <div class="login_info">
	                                <a href="${pageContext.request.contextPath }/user/include/findId" class="lnk">아이디 찾기</a>
	                                <span class="bar">|</span>
	                                <a href="${pageContext.request.contextPath }/user/include/findPw">비밀번호 찾기</a>
	                            </div>
	                        </div>
	                    </div>
	                </div>
	            </div>
	            
	            <div class="wrap_btn">
	                <button type="button" class="login_btn" onclick="userLogin();">로그인</button>
	            </div>
	        </div>
	    </form>
	    </div>
	</div>
<script language="JavaScript">
function userLogin() {
	if ( f.id.value == "" ) {
		alert("아이디를 입력하십시오.");
		f.id.focus();
		return;
	} 
	if ( f.passwd.value == "" ) {
		alert("비밀번호를 입력하십시오.");
		f.passwd.focus();
		return;
	}	
	
	f.action = "${pageContext.request.contextPath }/";
	f.submit();
}
</script>
</div>
