@charset "UTF-8";

/*----------------------------------------------
                    reset
----------------------------------------------*/
*{margin: 0; padding: 0;}
body{font-size: 16px; font-family: sans-serif, serif, "나눔고딕";}
a{color:#000; text-decoration: none;}
ul, li{list-style: none;}

/*----------------------------------------------
                    common style
----------------------------------------------*/
div[class*="left"]{float:left;}
div[class*="right"]{float:right;}


#modifyPw #section {width:100%; margin: 0 auto;}

#modifyPw #header {
    text-align:center; 
    height: 100px;
}

#modifyPw #header {
    text-align:center; 
    height: 100px;
}

#modifyPw #header {
    position: relative;
    width: 550px;
    margin: 0 auto;
    padding: 68px 0 38px;
    z-index: 20;
    text-align: center
}

#modifyPw #header #headerArea h1 img {
    width: 130px;
    text-align: center;
    margin-bottom: 20px;
}

#modifyPw #header #headerArea h1 .moditit {
    font-size: 30px;
}

#modifyPw .cont {
    width: 550px;
    margin: 0 auto;
    padding: 0;
}

#modifyPw .findPwForm {
    position: relative;
    width: auto !important;
    margin:0 auto; 
}

#modifyPw .info_input {
    width: 390px;
    margin: 0 auto;
    padding: 29px 0 23px 0;
}

#modifyPw .info_Box {
    float: none;
    width: 390px;
}

#modifyPw .info_Box input {
    margin: 10px 0;
}

#modifyPw .info_input .info_Box .passwd,
#modifyPw .info_input .info_Box .repasswd {
    width: 366px;
    height:49px; 
    line-height:49px; 
    border: 1px solid #ccc; 
    font-size:14px; 
    box-shadow: none; 
    padding:0 11px; 
    color: #333;
    border-bottom: 0;
}


#modifyPw .info_input .info_Box .passwd,
#modifyPw .info_input .info_Box .repasswd {
    border-top: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
}

#modifyPw .info_Box span {
    display: inline-block;
}

a:visited {
    text-decoration: none;
}

#modifyPw .wrap_btn {
    float: none;
    width: 390px;
    margin-top: 19px;
    padding-bottom: 15px;
    margin: 0 auto;
}

#modifyPw .modify_btn {
    display: block;
    width: 100%;
    padding: 17px 0 21px;
    text-align: center;
    line-height: 22px;
    font-size: 18px;
    background: #445da5;
    color: white;
    cursor: pointer;
    border: none;
}


