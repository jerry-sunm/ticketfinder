@charset "UTF-8";

/*----------------------------------------------
                    reset
----------------------------------------------*/
*{margin: 0; padding: 0;}
body{font-size: 16px; font-family: sans-serif, serif, "나눔고딕";}
a{color:#000; text-decoration: none;}
ul, li{list-style: none;}

/*----------------------------------------------
                    아이디 찾기
----------------------------------------------*/
#findId #section {width:100%; margin: 0 auto;}

#findId #header {
    text-align:center; 
    height: 100px;
}

#findId #header {
    text-align:center; 
    height: 100px;
}

#findId #header {
    position: relative;
    width: 550px;
    margin: 0 auto;
    padding: 68px 0 38px;
    z-index: 20;
    text-align: center
}

#findId #header #headerArea h1 img {
    width: 130px;
    text-align: center;
}

#findId #header #headerArea h1 .finderBox a{
    text-align: center;
    font-size: 20px;
}

#findId #header #headerArea h1 .finderBox a:first-child::after{
    content:"";
    margin-left:10px;
    border-right: 1px solid #ccc;
}

#findId #header #headerArea h1 .finderBox .on {
    font-weight: lighter;
}

#findId .cont {
    width: 550px;
    margin: 0 auto;
    padding: 0;
}

#findId .findIdForm {
    position: relative;
    width: auto !important;
    margin:0 auto; 
}

#findId .info_input {
    width: 390px;
    margin: 0 auto;
    padding: 29px 0 23px 0;
}

#findId .info_Box {
    float: none;
    width: 390px;
}

#findId .info_Box input {
    margin: 10px 0;
}

#findId .info_input .info_Box .name,
#findId .info_input .info_Box .num {
    width: 366px;
    height:49px; 
    line-height:49px; 
    border: 1px solid #ccc; 
    font-size:14px; 
    box-shadow: none; 
    padding:0 11px; 
    color: #333;
    border-bottom: 0;
}

#findId .info_input .info_Box .email {
    width: 265px;
    height:49px; 
    line-height:49px; 
    border: 1px solid #ccc; 
    font-size:14px; 
    box-shadow: none; 
    padding:0 11px; 
    color: #333;
    border-bottom: 0;
}

#findId .info_input .info_Box .name,
#findId .info_input .info_Box .email,
#findId .info_input .info_Box .num {
    border-top: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
}

.info_Box span {
    display: inline-block;
}

a:visited {
    text-decoration: none;
}

#findId .wrap_btn {
    float: none;
    width: 390px;
    margin-top: 19px;
    padding-bottom: 15px;
    margin: 0 auto;
}

#findId .check_btn {
    display: block;
    width: 100%;
    padding: 17px 0 21px;
    text-align: center;
    line-height: 22px;
    font-size: 18px;
    background: #445da5;
    color: white;
    cursor: pointer;
    border: none;
}

#findId .numBtn {
    display: block;
    width: 90px;
    padding: 13px 2px 13px 2px;
    text-align: center;
    line-height: 22px;
    font-size: 13px;
    background: #445da5;
    color: white;
}

