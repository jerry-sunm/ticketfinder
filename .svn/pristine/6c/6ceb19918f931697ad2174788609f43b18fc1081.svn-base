@charset "UTF-8"; /*----------------------------------------------
                    reset
----------------------------------------------*/
* {
    margin: 0;
    padding: 0;
}

body {
    font-size: 16px;
    font-family: sans-serif, serif, "나눔고딕";
}

a {
    color: #000;
    text-decoration: none;
}

ul, li {
    list-style: none;
}

/*----------------------------------------------
                    common style
----------------------------------------------*/
div[class*="left"] {
    float: left;
}

div[class*="right"] {
    float: right;
}

div#section01 {
    width: 100%;
    min-width: 1300px;
}

p.theaterTitle {
    text-align: center;
    padding: 90px 0 60px 0;
    font-size: 30px;
    font-weight: bold;
}

.swiper-container {
    width: 100%;
max-width: 1920px;
min-width: 1300px;
overflow: hidden;
margin: 0 auto;
height: 200px;
position: relative;
}
.swiper-slide {
  text-align: center;
  font-size: 18px;
  height: fit-content;
  /* Center slide text vertically */
  display: -webkit-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -ms-flex-align: center;
  -webkit-align-items: center;
  align-items: center;
  width: 200px;
  margin: 0 10px;
  height: 200px;
  -webkit-box-sizing: border-box;
box-sizing: border-box;
overflow: hidden;
border-radius: 50%;
}
.swiper-button-next {
    background: url(img/slideNext.png) no-repeat;
    /* position: absolute; */
    top: 50%;
    background-position-x: center;
    background-position-y: center;
}

.swiper-button-prev {
    background: url(img/slidePrev.png) no-repeat;
    /* position: absolute; */
    top: 50%;
    background-position-x: center;
    background-position-y: center;
}

.swiper-slide>a {
  width: 200px;
  height: 200px;
}
.swiper-slide img {
    width: inherit;
    vertical-align: middle;
    border-radius: 50%;
    opacity: 0.3;
}

.swiper-slide span {
    position: absolute;
    top: 45%;
    left: 25%;
    display: block;
    color: #252525;
    font-weight: bold;
}

.swiper-slide a:hover img{
  transform: scale(1.2);
opacity: 0.8;
transition: all 0.4s;
}

.swiper-slide a:hover span{
  color: #fdfdfd;
}



div#section02 {
    min-width: 1300px;
}

div#section02>p.theaterDetailTitle {
    text-align: center;
    padding: 50px 0 30px 0;
    border-top: 1px solid gray;
    font-size: 25px;
    font-weight: bold;
    margin-top: 30px;
}

div#section02>div.theaterInfo {
    margin: 30px 0 50px 0;
    width: 100%;
}

div#section02 div.theaterTab {
    height: 70px;
    text-align: center;
}

div#section02 div.theaterTab>span {
    line-height: 70px;
}

div#section02 div.theaterPlaylist {
    height: 471px;
    width: 1300px;
    margin: 0 auto;
    text-align: center;
}

div#section02 div.theaterPlaylist>a {
    cursor: pointer;
    display: inline-block;
    width: 216px;
    margin: 0 auto;
    margin-left: 20px;
    vertical-align: top;
    position: relative;
    text-decoration: none;
}

div#section02 div.theaterPlaylist div.theaterPlay {
    width: 216px;
    display: inline-block;
}

div#section02 div.theaterPlaylist div.theaterPlay>img {
    width: 100%;
}

div.theaterTab>span {
    cursor: pointer;
}

div.theaterTab>span.on {
    font-weight: bold;
}

div#section02 div.theaterDetail>div:not(.on) {
    display: none;
}

div#section02 div.theaterDetail>div.on {
    display: block;
}

div#section02 div.theaterDetail div.theaterPlay div.theaterPlayTxt {
    width: 216px;
    height: 302px;
    background: rgba(0,0,0,0.7);
    position: absolute;
    left: 0;
    top: 0;
    display: table;
    opacity: 0;
    transition: all 0.3s;
    z-index: 3;
}

div#section02 div.theaterDetail div.theaterPlay div.theaterPlayTxt>p:first-child {
    font-size: 18px;
    line-height: 25px;
    color: #fff;
}

div#section02 div.theaterDetail div.theaterPlay div.theaterPlayTxt>p:last-child {
    font-size: 13px;
    line-height: 20px;
    color: #fff;
    margin: 15px 0;
}
