@charset "UTF-8";

/*----------------------------------------------
                    reset
----------------------------------------------*/
*{margin: 0; padding: 0;}
body{font-size: 16px; font-family: 'Noto Sans KR', 'NanumBarunGothic', '맑은 고딕', 'Malgun Gothic', sans-serif;}
a{color:#000; text-decoration: none;}
ul, li{list-style: none;}

/*----------------------------------------------
                    common style
----------------------------------------------*/
[class*="left"], [class*="Left"]{float:left;}
[class*="right"], [class*="Right"]{float:right;}


.cont{width: 1200px; margin: 0 auto;}
.cont::after, .cont::before,
.popBox::after, .popBox::before{
  content:'';
  display: block;
  clear:both;
}

/*----------------------------------------------
                  header style
----------------------------------------------*/
#header{
  width: 100%;
  min-width: 1300px;
  padding: 20px;
  background-color: #fff;
  border-bottom: 1px solid #cccc;
  box-sizing: border-box;
  /* position: relative; */
  position: fixed;
  top:0;
  left:0;
  z-index: 10;
}

#header::after, #header::before{
  content: '';
  display: block;
  clear: both;
}

#header>div{
  display: inline-block;
  vertical-align: middle;
}

#header .nav_left img{width: 90px;}
#header .nav_left h1{font-size: 0;}

#header .nav_center{
  /* margin-left: 50%; */
  /* transform: translateX(-75%); */
  margin-left: calc(50% - 110px);
  transform: translateX(calc(-50% + 30px));
}

#header .nav_center::after, #header .nav_center::before{
  content: '';
  display: block;
  clear: both;
}

#header div ul li{
  float:left;
}

#header div ul li a{
  line-height: 35px;
  margin: 0 13px;
  font-size: 17px;
  position: relative;
}

#header .nav_center ul li a span{
  display: block;
  background: #ec7d2c;
  width: 0;
  height: 3px;
  position: absolute;
  top: 25px;
  left: 0;
  transition: all .3s ease;
  -webkit-transition: all .3s ease;
  -moz-transition: all .3s ease;
  -o-transition: all .3s ease;
}

#header .nav_center ul li a:hover span{
  width: 100%;
}

#header .nav_right{
  /* position: absolute;
  top:20px;
  right:20px; */
}

#header .nav_right ul li{
  position: relative;
}

#header .nav_right ul li a{
  margin: 0 15px;
  position: static;
}

#header .nav_right ul li a .fas{
  transform: scale(1.3);
  -webkit-transform: scale(1.3);
  -moz-transform: scale(1.3);
  -o-transform: scale(1.3);
}

#header .nav_right ul li:first-child a .fas{
  transform: scale(1.5);
  -webkit-transform: scale(1.5);
  -moz-transform: scale(1.5);
  -o-transform: scale(1.5);
}

#header .nav_right ul li a span{
  font-size: 11px;
  color:#333;
  opacity: 0;
  display: block;
  position: absolute;
  top: 25px;
  left: 0;
  width: 100%;
  text-align: center;
  transition: opacity .3s ease;
  -webkit-transition: opacity .3s ease;
  -moz-transition: opacity .3s ease;
  -o-transition: opacity .3s ease;
}

#header .nav_right ul li a:hover span{
  opacity: 1;
}

#header .nav_right ul li .searchBox{
  position: absolute;
  right: 0;
  top:55px;
  width: 340px;
  padding: 10PX 20px 12px;
  background: #333;
  border-radius: 5px;
  display: none;
  z-index: 2;
}

#header .nav_right ul li .searchBox::before{
  content:'';
	position:absolute;
  top:-10px;
  right:10px;
  border-bottom:10px solid #333;
	border-left:10px solid transparent;
	border-right:10px solid transparent;
}

#header .nav_right ul li .searchBox input{
  width: 300PX;
  line-height: 30px;
  font-size: 18px;
  background: #333;
  color:#fff;
  outline: none;
  border-top:none;
  border-left: none;
  border-right: none;
  border-bottom: 3px solid #fff;
}

#header .nav_right ul li .searchBox span{
  display: inline-block;
  width: 35px;
  height: 35px;
  float:right;
  position: relative;
  cursor: pointer;
}

#header .nav_right ul li .searchBox span::after,
#header .nav_right ul li .searchBox span::before{
  content: '';
  position: absolute;
  top:16.5px;
  left:10px;
  background: #fff;
  width: 30px;
  height: 2px;
}

#header .nav_right ul li .searchBox span::after{
  transform: rotate(45deg);
}

#header .nav_right ul li .searchBox span::before{
  transform: rotate(-45deg);
}


/*----------------------------------------------
                  footer style
----------------------------------------------*/
#footer{
  width: 100%;
  border-top: 1px solid #ccc;
  padding: 30px 0;
}

#footer .footerLeft{
  width: 15%;
}

#footer .footerLeft img{
  width: 100%;
}

#footer .footerRight{
  width: 75%;
  margin-left: 10%;
}

#footer .footerRight ul{
  float:left;
  width: 100%;
  margin-bottom: 20px;
}

#footer .footerRight ul li{
  float:left;
  margin-right:15px;
  font-size: 14px;
}

#footer .footerRight ul li a{
  color:#777;
}

#footer .footerRight .footerInfo p{
  line-height: 2.2;
  font-size: 14px;
  color:#777;
}

/*----------------------------------------------
              moveTopBtn style
----------------------------------------------*/
.moveTopBtn{
  display: block;
  position: fixed;
  width: 50px;
  height: 50px;
  overflow: hidden;
  bottom: -50px;
  right: 0;
  transition: all 0.5s;
}

.moveTopBtn.on{
  transform: translateY(-50px);
}

.moveTopBtn.on:hover img {
    margin-top: -50px;
}

/*----------------------------------------------
              main common style
----------------------------------------------*/
#main h2{
  font-size: 35px;
  text-align: center;
  color: #333;
  font-weight: 700;
  margin-bottom: 50px;
  position: relative;
}

#main>div[id*="section"]{
  width: 100%;
  padding: 50px 0;
}

/*----------------------------------------------
              main - section01 style
----------------------------------------------*/
#main #section01{
  width: 100%;
  height: 700px;
  min-width: 1300px;
  position: relative;
  overflow: hidden;
  padding:0;
  margin-top: 75px;
  background: #000;
}

#main #section01 .banner{
  margin: 0 auto;
  width: 1920px;
  height: 720px;
}

#main #section01 .banner .itemBox{
  width: 100%;
  height: 100%;
  position: relative;
}

#main #section01 .banner .itemBox .item{
  position: absolute;
  top:0;
  left:0;
  opacity: 0;
  z-index: 0;
}

#main #section01 .banner .itemBox .item.on{
  animation-name: picAnimation;
  animation-duration: .3s;
  animation-fill-mode: forwards;
}

@keyframes picAnimation {
  0% { opacity: 0;}
  100% { opacity: 1; z-index: 2;}
}

-moz-@keyframes picAnimation {
  0% { opacity: 0;}
  100% { opacity: 1; z-index: 2;}
}

-webkit-@keyframes picAnimation {
  0% { opacity: 0;}
  100% { opacity: 1; z-index: 2;}
}

#main #section01 .banner .itemBox .item>a{
  position: relative;
  display:inline-block;
}

#main #section01 .banner .itemBox .item>a>div{
  display: inline-block;
  position: absolute;
  top:30%;
  left:476px;
}

#main #section01 .banner .itemBox .item>a>div>p{
  color: #333;
  opacity: 0;
}

#main #section01 .banner .itemBox .item.on>a>div>p.subTit{
  font-size: 25px;
  animation-name: textAnimation;
  animation-duration: 1.5s;
  animation-delay: 0.5s;
  animation-fill-mode: forwards;
}

#main #section01 .banner .itemBox .item.on>a>div>p.mainTit{
  font-size: 80px;
  font-weight: 500;
  animation-name: textAnimation;
  animation-duration: 1.5s;
  animation-delay: 1s;
  animation-fill-mode: forwards;
}

#main #section01 .banner .itemBox .item.on>a>div>p.infoTit{
  font-size: 16px;
  padding-top: 25px;
  animation-name: textAnimation;
  animation-duration: 1.5s;
  animation-delay: 1.5s;
  animation-fill-mode: forwards;
}

#main #section01 .banner .itemBox .item .white{
  color:#fff !important;
}

@keyframes textAnimation {
  0% { transform: translateX(200px); opacity: 0;}
  100% { transform: translateX(0); opacity: 1; }
}

-moz-@keyframes textAnimation {
  0% { transform: translateX(200px); opacity: 0;}
  100% { transform: translateX(0); opacity: 1; }
}

-webkit-@keyframes textAnimation {
  0% { transform: translateX(200px); opacity: 0;}
  100% { transform: translateX(0); opacity: 1; }
}

#main #section01 .bannerBtm{
  width: 100%;
  height: 160px;
  border-top: 1px solid rgba(215,215,215,0.3);
  position: absolute;
  bottom: 0;
  left: 0;
  background: rgba(0,0,0,0.3);
  margin-bottom: -140px;
  z-index: 3;
  transition: all .5s ease;
}

#main #section01 .bannerBtm:hover{
  margin-bottom: 0;
}

#main #section01 .bannerBtm .thumbBox{
  /* width: 1300px; */
  height: 180px;
  margin-left: 50%;
  transform: translateX(-50%);
  display: inline-block;
}

#main #section01 .bannerBtm .thumbBox .thumbNail{
  display: inline-block;
  width: 86px;
  height: 160px;
  position: relative;
  top: -1px;
  margin: 0 7px;
  box-sizing: border-box;
  border-top: 4px solid rgba(0, 0, 0, 0);
}

#main #section01 .bannerBtm .thumbBox .thumbNail.on{
  border-top: 4px solid #e2782a;
}

#main #section01 .bannerBtm .thumbBox .thumbNail.on span{
  display: block;
}

#main #section01 .bannerBtm .thumbBox .thumbNail::after{
  content: "";
  display: block;
  width: 86px;
  height: 120px;
  background: rgba(0,0,0,0.5);
  position: absolute;
  left: 0;
  top: 18px;
  z-index: 2;
}

#main #section01 .bannerBtm .thumbBox .thumbNail.on::after{
  display: none;
}

#main #section01 .bannerBtm .thumbBox .thumbNail img{
  display: block;
  width: 86px;
  height: 120px;
  margin-top: 18px;
}

#main #section01 .bannerBtm .thumbBox .thumbNail span{
  display: none;
  width: 100%;
  text-align: center;
  position: absolute;
  top: -26px;
  color: #fff;
  font-size: 12px;
  letter-spacing: 0.2em;
  font-family: 'Noto Sans KR', 'NanumBarunGothic', '맑은 고딕', 'Malgun Gothic', sans-serif;
}

#main #section01>a{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  z-index: 4;
}

#main #section01>a.preBtn{
  left:30px;
}

#main #section01>a.nextBtn{
  right:30px;
  transform: translateY(-50%) rotate(180deg);
}

/*----------------------------------------------
              main - section02 style
----------------------------------------------*/
#main #section02{
  width: 100%;
  padding: 100px 0;
}

#main #section02 .hotBox ul{
  margin-left: -24px;
}

#main #section02 .hotBox ul li{
