@charset "UTF-8";

/*----------------------------------------------
                    reset
----------------------------------------------*/
*{margin: 0; padding: 0;}
body{font-size: 16px; font-family: sans-serif, serif, "나눔고딕";}
a{color:#000; text-decoration: none;}
ul, li{list-style: none;}

/*----------------------------------------------
                    common style
----------------------------------------------*/
div[class*="left"]{float:left;}
div[class*="right"]{float:right;}

body#qna>div#section {
    width: 1200px;
    margin: 0 auto;
}

body#qna p.qnaTitle {
    text-align: center;
    margin: 50px 0;
    width: 100%;
    font-size: 25px;
    font-weight: bold;
}

body#qna div.qnaCont {
    width: 100%;
    height: 900px;
}

body#qna div.qnaList {
    margin: 16px 30px 35px 30px;
    height: 700px;
    border-top: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
    padding: 10px 0;
}

body#qna div.qnaList>div.qnaGroup,div.qnaTitle,div.qnaPlay {
    height: 50px;
    width: 100%;
}

body#qna div.qnaList>div.qnaContent {
    height: 420px;
    width: 100%;
}

body#qna div.qnaList>div.qnaFile {
    height: 100px;
    width: 100%;
}

body#qna div.qnaList div.left {
    width: 120px;
    color: black;
    margin-left: 30px;
}

body#qna div.qnaList div:not(.left) {
    color: #666;
}

body#qna div.qnaList div.qnaGroupRBtn,div.qnaPlayList,div.qnaFileCont {
    float: left;
}

body#qna div.qnaList div.qnaGroupRBtn {
    display: flex;
}

body#qna div.qnaList div.qnaGroupRBtn>div {
    margin-right: 10px;
}

body#qna div.qnaList div.qnaGroupRBtn input {
    margin-right: 2px;
    vertical-align: middle;
}

body#qna div.qnaList div.qnaTitleInput>input {
    width: 800px;
    line-height: 20px;
}

body#qna div.qnaList div.qnaContentInput>textarea {
    width: 800px;
    height: 400px;
    resize: none;
    font-family: sans-serif, serif, "나눔고딕";
}

body#qna div.qnaList div.qnaFileCont>div.qnaFileBtn {
    border: 1px solid #666;
    width: 80px;
    text-align: center;
    line-height: 22px;
    margin-right: 10px;
    display: inline-block;
    font-size: 14px;
}

body#qna div.qnaList div.qnaFileCont>div.qnaFileInfo {
    color: #333;
    font-size: 12px;
    display: inline-block;
}

body#qna div.qnaList div.qnaFileCont>div.qnaFileList {
    margin-top: 5px;
    border: 1px solid #ddd;
    height: 50px;
}

body#qna div.qnaList div.qnaPlayList {
    display: flex;
}

body#qna div.qnaList div.qnaPlayList>div.qnaPlayListItem>input {
    width: 250px;
    line-height: 20px;
    cursor: default;
}

body#qna div.qnaList div.qnaPlayList>div.qnaPlayListBtn {
    width: 120px;
    height: 25px;
    background-color: #000;
    color: #ccc;
    line-height: 22px;
    text-align: center;
    margin: 0 10px;
    font-size: 14px;
}

body#qna div.qnaList div.qnaPlayList>div.qnaPlayListNone>input {
    vertical-align: middle;
}

body#qna div.qnaList div.qnaPlayList>div.qnaPlayListNone>span {
    font-size: 14px;
}

body#qna div.qnaBtnCont {
	margin: 40px 450px;
    text-align: center;
    display: flex;
}

body#qna div.qnaCont div.qnaCancelBtn, div.qnaSaveBtn {
    display: inline-block;
    margin: 0;
    padding: 0;
    text-align: center;
    white-space: nowrap;
    cursor: pointer;
    width: 100px;
    height: 30px;
    line-height: 28px;
}

body#qna div.qnaCont div.qnaCancelBtn {
    border: 1px solid #ddd;
}

body#qna div.qnaCont div.qnaSaveBtn {
    margin-left: 5px;
    background-color: #ec7d2c;
    border: 1px solid #ec7d2c;
    color: #fff;
}

