#login #section {width:100%;margin: 50px 0 100px 0;}

#login .loginHeader {
    text-align:center; 
    height: 100px;
    position: relative;
    width: 550px;
    margin: 0 auto;
    padding: 68px 0 14px;
    z-index: 20;
    text-align: center;
}


#login .loginHeader #headerArea {
    display: inline-block;
    float: left;
    padding: 0;
    width: 200px;
    height: 56px;
    text-align: center;
    margin: 30px 0 0 91px;
}

#login .loginHeader #headerArea img {
    width: 342px;
}

#login .cont {
    width: 550px;
    margin: 0 auto;
    padding: 0;
}

#login .loginForm {
    position: relative;
    width: auto !important;
    margin:0 auto; 
}

#login .login_input {
    width: 390px;
    margin: 0 auto;
    padding: 29px 0 23px 0;
}

#login .login_insert {
    float: none;
    width: 390px;
}

#login .login_input input {
    width: 366px;
    height:49px; 
    line-height:49px; 
    border: 1px solid #ccc; 
    font-size:14px; 
    box-shadow: none; 
    padding:0 11px; 
    color: #333;
    border-bottom: 0;
    margin: 10px 0;
}

#login .login_input .id,
#login .login_input .passwd {
    border-top: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
}

#login .save {
    overflow: hidden;
}

