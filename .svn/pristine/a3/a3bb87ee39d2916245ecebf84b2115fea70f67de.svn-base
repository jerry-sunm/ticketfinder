#login .login_info {
    float: left;; 
    margin-right: -3px;
    margin-top: 13px;
    font-size: 12px;
}

#login .login_info a {
    display: inline-block; 
    padding: 5px 2px; 
    color: #767676;
}

#login .login_info a.lnk {
    padding-left: 0;
}

#login .login_info .bar {
    color: #ebebeb;
}

a:visited {
    text-decoration: none;
}

#login .wrap_btn {
    float: none;
    width: 390px;
    margin-top: 19px;
    padding-bottom: 15px;
    margin: 0 auto;
}

#login .login_btn {
    display: block;
    width: 100%;
    padding: 17px 0 21px;
    text-align: center;
    line-height: 22px;
    font-size: 18px;
    background: #445da5;
    color: white;
    cursor: pointer;
}

