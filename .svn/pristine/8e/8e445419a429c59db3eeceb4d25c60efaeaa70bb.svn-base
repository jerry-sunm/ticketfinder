@charset "UTF-8";

/*----------------------------------------------
                    reset
----------------------------------------------*/
*{margin: 0; padding: 0;}
body{font-size: 16px; font-family: sans-serif, serif, "나눔고딕";}
a{color:#000; text-decoration: none;}
ul, li{list-style: none;}

/*----------------------------------------------
                    common style
----------------------------------------------*/
div[class*="left"]{float:left;}
div[class*="right"]{float:right;}


div#section {
    width: 1000px;
    margin: 0 auto;
}

div.reviewCont div.title {
    width: 100px;
    margin-left: 20px;
    line-height: 30px;
    font-weight: bold;
}

div.reviewTitle {
    text-align: center;
    font-size: 35px;
    font-weight: bold;
    margin: 70px 0 30px;
}

div.reviewPlayTitle {
    border-bottom: 2px solid black;
    font-size: 25px;
    font-weight: bold;
    padding-bottom: 10px;
    margin-bottom: 10px;
}

div.reviewDateCont {
    border-bottom: 1px solid black;
    display: flex;
    padding-bottom: 10px;
    margin-bottom: 10px;
}

div.reviewRateCont {
    border-bottom: 1px solid black;
    display: flex;
    padding-bottom: 10px;
    margin-bottom: 10px;
}

span.starR{
    background: url('img/starOff.png') no-repeat right 0;
    width: 30px;
    height: 30px;
    display: inline-block;
    text-indent: -9999px;
    cursor: pointer;
}
span.starR.on{
    background: url('img/starOn.png') no-repeat right 0;
    background-position:0 0;
}

div.reviewTxtCont {
    border-bottom: 1px solid #ddd;
    display: flex;
    padding-bottom: 10px;
    margin-bottom: 10px;
}

div.reviewTxtCont>textarea {
    width: 700px;
    height: 200px;
    resize: none;
    font-family: sans-serif, serif, "나눔고딕";
}

div.reviewCaution {
    border-bottom: 1px solid black;
    padding: 20px 50px 30px 50px;
}

div.reviewCaution>p.reviewInfo {
    background: url('img/Info.png')no-repeat;
    line-height: 20px;
    padding-left: 27px;
    font-size: 16px;
    color: #ec7d2c;
    font-weight: bold;
    margin-bottom: 10px;
}

div.reviewCaution>p.reviewCautionTxt1 {
    font-size: 13px;
    color: #666;
    margin: 0 0 10px 3px;
    line-height: 20px;
}

div.reviewCaution>ul.reviewCautionList {
    margin: 0 0 18px 5px;
}

div.reviewCaution>ul.reviewCautionList>li {
    background: url('img/checkGray.png')no-repeat left 4px;
    padding-left: 22px;
    font-size: 13px;
    color: #999;
    line-height: 22px;
}

div.reviewBtn {
	padding: 25px 0 25px 0;
    text-align: center;
    display: flex;
    margin: 20px 395px 40px;
}

div.reviewBtn div.btnCancel {
    border: 1px solid #ec7d2c;
    color: #ec7d2c;
    display: inline-block;
    margin: 0;
    padding: 0;
    text-align: center;
    white-space: nowrap;
    cursor: pointer;
    width: 100px;
    height: 30px;
    line-height: 28px;
    margin-right: 10px;
}

div.reviewBtn div.btnSave {
    margin-left: 5px;
    background-color: #ec7d2c;
    border: 1px solid #ec7d2c;
    color: #fff;
    display: inline-block;
    margin: 0;
    padding: 0;
    text-align: center;
    white-space: nowrap;
    cursor: pointer;
    width: 100px;
    height: 30px;
    line-height: 28px;
}

